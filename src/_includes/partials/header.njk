<header x-ref="header">
  <nav class="bg-skin-600 dark:bg-zinc-800 rounded-xl mx-auto flex container items-center justify-between sm:my-6 py-4" aria-label="Global">
    <div class="achievements-btn">
      <button class="-my-2.5 flex items-center justify-center rounded-md p-2.5">
        <a href="/achievements/">{% svg "certificate", "size-7" %}</a>
      </button>
    </div>
    <a href="/" class="gap-2 text-xl font-bold">
      AZ
    </a>
    <button class="-my-2.5 rounded-md p-2.5"
            aria-label="Switch to dark theme"
            :aria-label="theme.dark ? 'Switch to light theme' : 'Switch to dark theme'"
            @click="toggleTheme()">
      <span class="sr-only" x-text="theme.dark ? 'Switch to light theme' : 'Switch to dark theme'">Switch to dark theme</span>
      <span x-show="theme.dark">{% feather "sun", { "class": "size-7" } %}</span>
      <span x-show="!theme.dark" x-cloak>{% feather "moon", { "class": "size-7" } %}</span>
    </button>
  </nav>
</header>
